             insert into towary(nazwa) VALUES ('Jogurt');

alter table towary add stan int not null DEFAULT 30;
create table sprzedaz (
    id serial,
    id_towaru int,
    sztuk int,
    cena int);


insert into sprzedaz (id_towaru,sztuk,cena) values (1,3,30);


